<h2>Submit a new restaurant:</h2>

<div class="form"><%= form_with model:@restaurant do |form|%>
    <div class="label"><%= form.label :name %></div>
    <div class="text_field"> <%= form.text_field :name %></div>
    <div class="label"><%= form.label :cuisine %></div>
    <div class="text_field"> <%= form.text_field :cuisine %></div>
    <div class="label"><%= form.label :price_range %></div>
    <div class="text_field"><%= form.text_field :price_range %></div>
    <div class="label"><%= form.label :description %></div>
    <div class="text_field"><%= form.text_field :description, id: 'description_field' %></div>
    <p>
    <%= form.submit 'Add Restaurant' %>
<% end %></div>
